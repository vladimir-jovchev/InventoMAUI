<?xml version="1.0" encoding="UTF-8"?>

<Shell x:Class="Invento.MAUI.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Invento.MAUI.Views"
       Title="Invento">

    <TabBar>
        <ShellContent Title="Dashboard" Icon="home.png" ContentTemplate="{DataTemplate local:DashboardPage}" />
        <ShellContent Title="Products" Icon="package.png" ContentTemplate="{DataTemplate local:ProductsPage}" />
        <ShellContent Title="Inventory" Icon="inventory.png" ContentTemplate="{DataTemplate local:InventoryPage}" />
        <ShellContent Title="Reports" Icon="chart.png" ContentTemplate="{DataTemplate local:ReportsPage}" />
    </TabBar>

</Shell>